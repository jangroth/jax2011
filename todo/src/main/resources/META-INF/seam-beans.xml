<?xml version="1.0"?>
<beans xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://jboss.org/schema/cdi/beans_1_0.xsd"
	xmlns:s="urn:java:ee" xmlns:p="urn:java:javax.persistence"
	xmlns:rest="urn:java:org.jboss.seam.rest:org.jboss.seam.rest.exceptions"
	xmlns:util="urn:java:ch.helvetia.jax2011.util"
	xmlns:todo="urn:java:ch.helvetia.jax2011.db:ch.helvetia.jax2011.web:ch.helvetia.jax2011.control"
	xmlns:security="urn:java:org.jboss.seam.security">

	<security:SecurityEventMessages>
		<s:modifies />
		<security:enabled>false</security:enabled>
	</security:SecurityEventMessages>

	<rest:SeamRestConfiguration>
		<rest:mappings>
			<s:value>
				<rest:Mapping exceptionType="ch.helvetia.jax2011.error.RestXmlException"
					statusCode="500">
					<rest:message>REST XML-based exception handling.</rest:message>
				</rest:Mapping>
			</s:value>
		</rest:mappings>
	</rest:SeamRestConfiguration>

	<util:JaxLocaleConfiguration>
		<s:modifies />
		<util:defaultLocaleKey>
			<s:value>de_CH</s:value>
		</util:defaultLocaleKey>
		<util:supportedLocaleKeys>
			<s:value>en_US</s:value>
			<s:value>de_CH</s:value>
		</util:supportedLocaleKeys>
	</util:JaxLocaleConfiguration>

	<!-- <p:EntityManagerFactory> -->
	<!-- <s:Produces /> -->
	<!-- <p:PersistenceUnit unitName="todoApp" /> -->
	<!-- <todo:TodoDb /> -->
	<!-- <s:ConversationScoped /> -->
	<!-- <s:ExtensionManaged /> -->
	<!-- </p:EntityManagerFactory> -->

	<!-- 86400000 ms = 1 day -->
	<todo:ExpiresHandler>
		<s:modifies />
		<todo:expires>86400000</todo:expires>
		<todo:path>/javax.faces.resource</todo:path>
	</todo:ExpiresHandler>

	<security:IdentityImpl>
		<s:modifies />
		<security:authenticatorClass>ch.helvetia.jax2011.security.TodoAuthenticator
		</security:authenticatorClass>
	</security:IdentityImpl>

	<todo:AppVersion>
		<s:modifies />
		<todo:version>0.2 Seam 3</todo:version>
	</todo:AppVersion>

</beans>
